# /etc/systemd/system/api.service
[Unit]
Description=demo fastapi application
After=network.target

[Service]
User=rakesh
Group=rakesh
WorkingDirectory=/home/rakesh/app/src
Environment="PATH=/home/rakesh/app/venv/bin"
ExecStart=/home/rakesh/app/venv/bin/gunicorn -w 4 -k uvicorn.workers.UvicornWorker main:app --bind 0.0.0.0:8000

Restart=always

[Install]
WantedBy=multi-user.target
